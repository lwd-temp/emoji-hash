{
  "name": "emoji-hash-gen",
  "version": "0.0.1",
  "description": "Generates hash of string in emoji",
  "main": "./lib/index.js",
  "type": "./lib/types.d.ts",
  "repository": "https://github.com/opa-oz/emoji-hash.git",
  "author": "opa_oz",
  "license": "MIT",
  "private": false,
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "babel-jest": "^26.6.3",
    "emoji-named-characters": "^1.0.2",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "shuffle-array": "^1.0.1",
    "standard-version": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "scripts": {
    "release": "standard-version",
    "test": "jest",
    "build": "rimraf ./build && tsc && cp src/types/index.d.ts lib/types.d.ts",
    "lint": "eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "generate-table": "node scripts/pre-generate.js"
  },
  "jest": {
    "moduleNameMapper": {
      "^table.js$": "<rootDir>/src/generated/table.js"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "d.ts"
    ]
  }
}
